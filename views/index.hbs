  {{#if produtos}}
  <div class="row">
    {{#each produtos}}
    <div class="col s6 m6">
      <div class="card small home-img-card">
        <div class="card-image">
          <img class="imagem" src="{{url}}">
          <span class="card-title home-card-title">R${{valor}}</span>
        </div>
        <div class="card-content">
          <p class="home-title-product">{{nome}}</p>
          <p>{{descricao}}</p>
          <p class="home-subtitle-product">Vendido por: <a href="#">{{userName}}</a></p>
          <a href="/comprar-produto?id={{_id}}&emailVendedor={{userEmail}}">Ver mais </a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
{{else}}
<h4 class="text-center">Não existem produtos a venda :( <br></h4>
